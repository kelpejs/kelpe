{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "incremental": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "lib": ["esnext", "dom", "dom.iterable"],
    "module": "ESNext",
    "moduleDetection": "force",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "target": "ES2022",
    "outDir": "dist",
    "strict": true,
    "strictNullChecks": true
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
